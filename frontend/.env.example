# ========================================
# PROJECT NEXUS - FRONTEND ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ----------------------------------------
# Application Configuration
# ----------------------------------------
REACT_APP_NAME="Project Nexus Dashboard"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENV=development

# ----------------------------------------
# Backend API Configuration
# ----------------------------------------
# Backend API base URL (Node.js/Express server)
REACT_APP_API_URL=http://localhost:5000/api

# ----------------------------------------
# Sonar CRM Integration
# ----------------------------------------
# Sonar CRM API endpoint
REACT_APP_SONAR_API_URL=https://qflix.sonar.software/api/v1
# Sonar CRM API Token (get from Sonar Settings > API)
REACT_APP_SONAR_API_TOKEN=your_sonar_api_token_here

# ----------------------------------------
# Microsoft Graph API (Email & Calendar)
# ----------------------------------------
# Azure AD Application (Client) ID
REACT_APP_AZURE_CLIENT_ID=a81c3e0e-24f2-487a-8fd5-e8e608b30947
# Azure AD Directory (Tenant) ID
REACT_APP_AZURE_TENANT_ID=your_tenant_id_here
# Azure AD Redirect URI
REACT_APP_AZURE_REDIRECT_URI=http://localhost:3000
# Microsoft Graph API Scopes
REACT_APP_AZURE_SCOPES=User.Read,Mail.Read,Mail.ReadWrite,Mail.Send,Calendars.Read,Calendars.ReadWrite

# ----------------------------------------
# Twilio API (SMS & Voice)
# ----------------------------------------
# Twilio Account SID
REACT_APP_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
# Twilio Auth Token (DO NOT expose in frontend - use backend)
REACT_APP_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
# Twilio Phone Number
REACT_APP_TWILIO_PHONE_NUMBER=+1234567890

# ----------------------------------------
# WhatsApp Business API
# ----------------------------------------
# WhatsApp Business Phone Number
REACT_APP_WHATSAPP_PHONE_NUMBER=+1234567890
# WhatsApp API endpoint (via Twilio)
REACT_APP_WHATSAPP_API_URL=https://api.twilio.com/2010-04-01/Accounts

# ----------------------------------------
# Authentication & Security
# ----------------------------------------
# JWT Secret for token validation (should match backend)
REACT_APP_JWT_SECRET=your_jwt_secret_key_here
# Session timeout in minutes
REACT_APP_SESSION_TIMEOUT=60

# ----------------------------------------
# Feature Flags
# ----------------------------------------
REACT_APP_ENABLE_SMS=true
REACT_APP_ENABLE_EMAIL=true
REACT_APP_ENABLE_WHATSAPP=true
REACT_APP_ENABLE_VOICE_CALLS=true
REACT_APP_ENABLE_CALENDAR=true

# ----------------------------------------
# Development & Debugging
# ----------------------------------------
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

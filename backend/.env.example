# ============================================
# Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_nexus_db
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_CONNECTION_STRING=postgresql://your_database_user:your_database_password@localhost:5432/project_nexus_db

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ============================================
# Security & Encryption
# ============================================
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000

# ============================================
# Sonar CRM Integration
# ============================================
SONAR_BASE_URL=https://qflix.sonar.software
SONAR_API_TOKEN=your_sonar_api_token_here
SONAR_WEBHOOK_SECRET=your_webhook_secret_here

# Sonar Configuration
SONAR_ACCOUNT_STATUS_ENDPOINT=/api/v1/accounts
SONAR_TICKET_ENDPOINT=/api/v1/tickets
SONAR_INVOICE_ENDPOINT=/api/v1/invoices

# ============================================
# Microsoft Graph API (Email Integration)
# ============================================
MICROSOFT_CLIENT_ID=a81c3e0e-24f2-487a-8fd5-e8e608b30947
MICROSOFT_TENANT_ID=your_tenant_id_here
MICROSOFT_CLIENT_SECRET=your_client_secret_here

# Microsoft Graph Configuration
MICROSOFT_REDIRECT_URI=http://localhost:5000/auth/microsoft/callback
MICROSOFT_SCOPES=User.Read,Mail.Read,Mail.Send

# ============================================
# Twilio SMS/Voice Configuration
# ============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ============================================
# WhatsApp Configuration (Twilio)
# ============================================
WHATSAPP_ENABLED=true
WHATSAPP_PHONE_NUMBER=whatsapp:+14155238886
WHATSAPP_SANDBOX_ENABLED=true

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM_NAME=Project Nexus Support
SMTP_FROM_EMAIL=support@projectnexus.com

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/backend.log
ENABLE_REQUEST_LOGGING=true

# ============================================
# API Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# ============================================
# Development & Debugging
# ============================================
DEBUG=true
VERBOSE_ERRORS=true
ENABLE_SWAGGER_DOCS=true

# ============================================
# External Services
# ============================================
# Add any additional API keys or service endpoints here
